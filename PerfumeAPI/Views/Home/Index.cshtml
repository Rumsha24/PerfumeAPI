@model IEnumerable<PerfumeAPI.Models.Entities.Product>
@{
    ViewData["Title"] = "Luxury Perfumes | NOIRE ESSENCE";
}

<!-- Hero Carousel -->
<div id="perfumeCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="hero-section" style="background-image: url('/images/hero1.jpg')">
                <div class="hero-content text-center">
                    <h1 class="display-3 fw-light mb-4">ELEVATE YOUR SENSES</h1>
                    <p class="lead mb-5">Discover our exclusive collection of artisanal fragrances</p>
                    <a asp-controller="Perfume" asp-action="Index" class="btn btn-light btn-lg px-5">Explore</a>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="hero-section" style="background-image: url('/images/hero2.jpg')">
                <div class="hero-content text-center">
                    <h1 class="display-3 fw-light mb-4">TIMELESS ELEGANCE</h1>
                    <p class="lead mb-5">Crafted with rare ingredients from around the world</p>
                    <a href="#" class="btn btn-light btn-lg px-5">New Arrivals</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Collections -->
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-light mb-3">SIGNATURE COLLECTIONS</h2>
        <p class="text-muted">Discover our most coveted fragrances</p>
    </div>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-3">
                <div class="card border-0 h-100 perfume-card">
                    <div class="perfume-badge">BESTSELLER</div>
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" onerror="this.onerror=null;this.src='/images/default-perfume.jpg';">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-light">@product.Name</h5>
                        <p class="text-muted small">@product.FragranceFamily</p>
                        <p class="text-dark h5">@product.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a asp-controller="Perfume" asp-action="Details" asp-route-id="@product.Id"
                           class="btn btn-outline-dark w-100">Discover</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Fragrance Families -->
<div class="bg-light py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-light">EXPLORE OUR FRAGRANCE FAMILIES</h2>
        </div>

        <div class="row g-4">
            @foreach (var family in ViewBag.FragranceFamilies as List<string> ?? new List<string>())
            {
                <div class="col-md-3">
                    <div class="fragrance-family-card text-center p-4">
                        <div class="family-icon mb-3">
                            <i class="fas fa-spa fa-2x"></i>
                        </div>
                        <h5>@family</h5>
                        <a href="#" class="stretched-link"></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
        }

        h1, h2, h3, h4, h5 {
            font-family: 'Playfair Display', serif;
        }

        .hero-section {
            height: 80vh;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            position: relative;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.4);
            }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 800px;
            padding: 2rem;
        }

        .perfume-card {
            transition: all 0.3s ease;
            position: relative;
        }

            .perfume-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }

        .perfume-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: #000;
            color: #fff;
            padding: 5px 10px;
            font-size: 12px;
            z-index: 10;
        }

        .fragrance-family-card {
            background: white;
            border-radius: 5px;
            transition: all 0.3s ease;
            height: 100%;
        }

            .fragrance-family-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.05);
            }

        .family-icon {
            color: #8e6c88;
        }
    </style>
}