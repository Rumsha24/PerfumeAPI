@{
    ViewData["Title"] = "Our Story";
}

@section Styles {
    <style>
        /* Updated Theme Colors */
        :root {
            --bg-lightest: #F9F5FF;
            --bg-light: #E9D8FD;
            --bg-soft: #D6BCFA;
            --bg-mid: #B794F4;
            --primary: #9F7AEA;
            --primary-dark: #805AD5;
            --accent: #B794F4;
            --deep: #6B46C1;
            --darker: #553C9A;
            --near-black: #44337A;
            --white: #FFFFFF;
            --gold: #D69E2E;
        }

        /* Your Original CSS Below - Only Color Values Updated */
        body {
            background: #F9F5FF;
            color: #44337A;
            font-family: 'Segoe UI', Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        h1, h2, h3 {
            color: #805AD5;
        }

        a, a:visited {
            color: #6B46C1;
        }

        /* Hero Section */
        .story-hero {
            height: 60vh;
            background: linear-gradient(rgba(159, 122, 234, 0.7), rgba(214, 188, 250, 0.7)), url('/images/story-hero.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            margin-bottom: 40px;
            opacity: 0;
            animation: fadeIn 1.5s ease-in-out forwards;
        }

            .story-hero h1 {
                font-size: 4rem;
                color: #F9F5FF;
                text-shadow: 2px 2px 4px rgba(68, 51, 122, 0.5);
                margin-bottom: 20px;
            }

            .story-hero p {
                font-size: 1.5rem;
                color: #F9F5FF;
                max-width: 800px;
                margin: 0 auto;
                text-shadow: 1px 1px 2px rgba(68, 51, 122, 0.5);
            }

        /* Timeline Section */
        .timeline {
            position: relative;
            max-width: 1200px;
            margin: 0 auto 80px auto;
        }

            .timeline::after {
                content: '';
                position: absolute;
                width: 6px;
                background-color: #D6BCFA;
                top: 0;
                bottom: 0;
                left: 50%;
                margin-left: -3px;
                border-radius: 10px;
            }

        .timeline-container {
            padding: 10px 40px;
            position: relative;
            background-color: inherit;
            width: 50%;
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease;
        }

            .timeline-container.visible {
                opacity: 1;
                transform: translateY(0);
            }

            .timeline-container::after {
                content: '';
                position: absolute;
                width: 25px;
                height: 25px;
                right: -17px;
                background-color: #E9D8FD;
                border: 4px solid #805AD5;
                top: 15px;
                border-radius: 50%;
                z-index: 1;
            }

        .left {
            left: 0;
        }

        .right {
            left: 50%;
        }

        .left::before {
            content: " ";
            height: 0;
            position: absolute;
            top: 22px;
            width: 0;
            z-index: 1;
            right: 30px;
            border: medium solid #E9D8FD;
            border-width: 10px 0 10px 10px;
            border-color: transparent transparent transparent #E9D8FD;
        }

        .right::before {
            content: " ";
            height: 0;
            position: absolute;
            top: 22px;
            width: 0;
            z-index: 1;
            left: 30px;
            border: medium solid #E9D8FD;
            border-width: 10px 10px 10px 0;
            border-color: transparent #E9D8FD transparent transparent;
        }

        .right::after {
            left: -16px;
        }

        .timeline-content {
            padding: 20px 30px;
            background-color: #E9D8FD;
            position: relative;
            border-radius: 6px;
            box-shadow: 0 4px 8px rgba(128, 90, 213, 0.1);
        }

            .timeline-content h2 {
                margin-top: 0;
                color: #6B46C1;
            }

        .timeline-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 6px;
            margin: 10px 0;
            border: 2px solid #9F7AEA;
            transition: transform 0.3s ease;
        }

            .timeline-img:hover {
                transform: scale(1.05);
            }

        /* Team Section */
        .team-section {
            max-width: 1200px;
            margin: 0 auto 80px auto;
            text-align: center;
        }

        .team-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
            margin-top: 40px;
        }

        .team-member {
            width: 250px;
            background: #E9D8FD;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(128, 90, 213, 0.1);
            transition: all 0.3s ease;
            opacity: 0;
            transform: translateY(20px);
        }

            .team-member.visible {
                opacity: 1;
                transform: translateY(0);
            }

            .team-member:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(128, 90, 213, 0.2);
            }

            .team-member img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #9F7AEA;
                margin-bottom: 15px;
            }

            .team-member h3 {
                margin: 10px 0 5px 0;
            }

            .team-member p {
                color: #6B46C1;
                font-style: italic;
                margin: 5px 0;
            }

        /* Values Section */
        .values-section {
            max-width: 1000px;
            margin: 0 auto 80px auto;
            text-align: center;
        }

        .values-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 30px;
            margin-top: 40px;
        }

        .value-card {
            width: 250px;
            background: #D6BCFA;
            border-radius: 10px;
            padding: 30px 20px;
            box-shadow: 0 4px 8px rgba(128, 90, 213, 0.1);
            transition: all 0.3s ease;
        }

            .value-card:hover {
                background: #9F7AEA;
                color: #F9F5FF;
                transform: translateY(-10px);
            }

                .value-card:hover h3 {
                    color: #F9F5FF;
                }

        .value-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #805AD5;
        }

        .value-card:hover .value-icon {
            color: #F9F5FF;
        }

        /* Gallery Section */
        .interactive-gallery {
            max-width: 1200px;
            margin: 0 auto 80px auto;
            text-align: center;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            height: 250px;
            box-shadow: 0 4px 8px rgba(128, 90, 213, 0.1);
        }

        .gallery-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .gallery-caption {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(107, 70, 193, 0.8);
            color: #F9F5FF;
            padding: 15px;
            transform: translateY(100%);
            transition: transform 0.3s ease;
        }

        .gallery-item:hover .gallery-img {
            transform: scale(1.1);
        }

        .gallery-item:hover .gallery-caption {
            transform: translateY(0);
        }

        /* CTA Section */
        .cta-section {
            background: #D6BCFA;
            padding: 60px 20px;
            text-align: center;
            margin-bottom: 60px;
            border-radius: 10px;
            max-width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-button {
            display: inline-block;
            background: #805AD5;
            color: #F9F5FF;
            padding: 15px 40px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: bold;
            margin-top: 20px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(128, 90, 213, 0.3);
        }

            .cta-button:hover {
                background: #6B46C1;
                transform: translateY(-3px);
                box-shadow: 0 6px 12px rgba(128, 90, 213, 0.4);
            }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }
    </style>
}

