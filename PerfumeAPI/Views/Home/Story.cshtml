@{
    ViewData["Title"] = "Our Story";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-6">
            <h1 class="display-4 mb-4">Our Story</h1>
            <p class="lead">Born from a passion for timeless fragrances</p>

            <p>
                NOIRE ESSENCE was founded in 2010 by master perfumer Jacques Laurent in the heart of Paris.
                Our mission is to preserve the art of traditional perfume-making while infusing modern elegance.
            </p>

            <p>
                Each fragrance in our vintage collection is crafted using rare ingredients sourced from
                sustainable growers around the world. We honor the heritage of perfumery while innovating
                for the contemporary connoisseur.
            </p>

            <p>
                What began as a small atelier in Montmartre has grown into an internationally recognized
                brand, yet we remain committed to our artisanal roots.
            </p>
        </div>
        <div class="col-lg-6">
            <img src="~/images/paris-atelier.jpg" class="img-fluid rounded" alt="Our Paris Atelier">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="mb-4">Our Philosophy</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-leaf fa-3x text-success mb-3"></i>
                            <h5>Sustainability</h5>
                            <p>Ethically sourced ingredients with minimal environmental impact</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-gem fa-3x text-primary mb-3"></i>
                            <h5>Quality</h5>
                            <p>Only the finest raw materials meet our exacting standards</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0">
                        <div class="card-body text-center">
                            <i class="fas fa-heart fa-3x text-danger mb-3"></i>
                            <h5>Passion</h5>
                            <p>Each bottle is crafted with dedication to the perfumer's art</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>