@using Microsoft.AspNetCore.Identity
@inject SignInManager<PerfumeAPI.Models.Entities.User> SignInManager
@inject UserManager<PerfumeAPI.Models.Entities.User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NOIRE ESSENCE</title>
    <meta name="description" content="NOIRE ESSENCE - Luxury perfumes crafted with passion since 1923" />
    <meta name="keywords" content="perfume, luxury, fragrance, eau de parfum" />

    <link rel="icon" href="~/favicon.ico" type="image/x-icon" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Your existing CSS here (no changes) */
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Luxury Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <a class="navbar-brand fs-2" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-spa me-2" aria-hidden="true"></i>NOIRE ESSENCE
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Story">Our Story</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Comment" asp-action="Index">Comments</a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            <li class="nav-item ms-lg-3 mt-2 mt-lg-0 d-flex align-items-center">
                                <span class="nav-link pe-3">
                                    <i class="fas fa-user me-1"></i> Hello, @currentUser?.FirstName
                                </span>
                                <form method="post" asp-controller="Account" asp-action="Logout" class="m-0">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-lg-3 mt-2 mt-lg-0">
                                <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user me-1"></i> Account
                                </a>
                            </li>
                        }


                        <li class="nav-item dropdown ms-lg-2">
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-shopping-bag fa-lg" aria-hidden="true"></i>
                                <span class="sr-only">Shopping Cart</span>
                                <span class="cart-counter position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary d-none">
                                    0
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end cart-dropdown" aria-labelledby="cartDropdown">
                                <div class="px-3 py-2 border-bottom">
                                    <h6 class="mb-0">Your Cart</h6>
                                </div>
                                <div class="cart-items">
                                    <div class="text-center p-4">
                                        <i class="fas fa-shopping-bag fa-2x mb-2 text-muted"></i>
                                        <p class="mb-0">Your cart is empty</p>
                                    </div>
                                </div>
                                <div class="cart-summary">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span class="fw-bold">$0.00</span>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Cart" asp-action="Index" class="btn btn-dark">View Cart</a>
                                        <a asp-controller="Order" asp-action="Checkout" class="btn btn-outline-dark">Checkout</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Enhanced Luxury Footer -->
    <footer>
        <!-- Your existing footer unchanged -->
    </footer>

    <!-- Bootstrap JS Bundle (required for dropdowns, modals, etc) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoZ2xDHu20dXb6N5Q9nN90+7M1h0l+hE6z4XYnA1/4L8Nf9"
            crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
