<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NOIRE ESSENCE</title>
    <meta name="description" content="NOIRE ESSENCE - Luxury perfumes crafted with passion since 1923">
    <meta name="keywords" content="perfume, luxury, fragrance, eau de parfum">

    <link rel="icon" href="~/favicon.ico" type="image/x-icon" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --bg-lightest: #EBE0FF;
            --bg-light: #DAC7FF;
            --bg-soft: #C7ADFF;
            --bg-mid: #AC8BEE;
            --primary: #916DD5;
            --primary-dark: #7151A9;
            --accent: #AC8BEE;
            --deep: #573D7F;
            --darker: #46325D;
            --near-black: #3F3649;
            --white: #fff;
            --card-shadow: 0 10px 30px rgba(113, 81, 169, 0.12);
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, var(--bg-lightest) 60%, var(--bg-soft) 100%);
            color: var(--near-black);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        h1, h2, h3, h4, h5, .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            color: var(--primary-dark);
        }

        .navbar {
            background: var(--primary);
            border-bottom: 2px solid var(--accent);
            box-shadow: var(--card-shadow);
        }
        .navbar-brand, .nav-link {
            color: var(--white) !important;
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 1.1rem;
            transition: color 0.3s;
        }
        .nav-link:hover, .navbar-brand:hover {
            color: var(--bg-mid) !important;
        }

        .btn-outline-light {
            border-color: var(--primary-dark);
            color: var(--primary-dark);
            background: var(--white);
            transition: background 0.3s, color 0.3s;
        }
        .btn-outline-light:hover {
            background: var(--primary-dark);
            color: var(--white) !important;
            border-color: var(--primary-dark);
        }

        .perfume-card {
            background: var(--white);
            border-radius: 16px;
            box-shadow: var(--card-shadow);
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid var(--bg-soft);
        }
        .perfume-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 16px 40px rgba(113, 81, 169, 0.18);
            border-color: var(--primary);
        }
        .card-title {
            color: var(--primary-dark);
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
        }
        .card-text {
            color: var(--primary);
            margin-bottom: 1rem;
        }
        .card-price {
            color: var(--deep);
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }
        .perfume-badge {
            background: var(--primary);
            color: var(--white);
            font-weight: 600;
            border-radius: 20px;
            position: absolute;
            top: 15px;
            right: 15px;
            padding: 5px 15px;
            font-size: 0.8rem;
            z-index: 1;
        }

        /* Footer */
        footer {
            background: var(--darker);
            color: var(--bg-lightest);
            border-top: 2px solid var(--primary);
            margin-top: auto;
            padding: 4rem 0 2rem;
        }
        .footer-logo, .footer-heading {
            color: var(--accent);
        }
        .footer-links a {
            color: var(--bg-lightest);
            transition: color 0.3s;
        }
        .footer-links a:hover {
            color: var(--primary);
            padding-left: 5px;
        }
        .social-links a {
            color: var(--accent);
            font-size: 1.2rem;
            transition: color 0.3s, transform 0.3s;
        }
        .social-links a:hover {
            color: var(--primary);
            transform: translateY(-3px);
        }
        .footer-bottom {
            border-top: 1px solid var(--primary);
            color: var(--bg-lightest);
            text-align: center;
            margin-top: 3rem;
            padding-top: 2rem;
        }
        .copyright {
            color: var(--accent);
            font-size: 0.85rem;
        }

        /* Back to Top Button */
        #back-to-top {
            background: var(--primary);
            color: var(--white);
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s, transform 0.3s;
        }
        #back-to-top:hover {
            background: var(--primary-dark);
            transform: translateY(-3px);
        }

        /* Section Styling */
        .section-title {
            position: relative;
            margin-bottom: 3rem;
            padding-bottom: 1rem;
            color: var(--primary-dark);
        }
        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 3px;
            background: var(--primary);
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Luxury Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <a class="navbar-brand fs-2" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-spa me-2" aria-hidden="true"></i>NOIRE ESSENCE
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Story">Our Story</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Comment" asp-action="CommentForm">Comments</a>
                        </li>
                        <li class="nav-item ms-lg-3 mt-2 mt-lg-0">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Index">
                                <i class="fas fa-user me-1"></i> Account
                            </a>
                        </li>
                        <li class="nav-item dropdown ms-lg-2">
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-shopping-bag fa-lg" aria-hidden="true"></i>
                                <span class="sr-only">Shopping Cart</span>
                                <span class="cart-counter position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary d-none">
                                    0
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end cart-dropdown" aria-labelledby="cartDropdown">
                                <div class="px-3 py-2 border-bottom">
                                    <h6 class="mb-0">Your Cart</h6>
                                </div>
                                <div class="cart-items">
                                    <div class="text-center p-4">
                                        <i class="fas fa-shopping-bag fa-2x mb-2 text-muted"></i>
                                        <p class="mb-0">Your cart is empty</p>
                                    </div>
                                </div>
                                <div class="cart-summary">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span class="fw-bold">$0.00</span>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Cart" asp-action="Index" class="btn btn-dark">View Cart</a>
                                        <a asp-controller="Order" asp-action="Checkout" class="btn btn-outline-dark">Checkout</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Enhanced Luxury Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <a href="/" class="footer-logo text-decoration-none">
                        <i class="fas fa-spa me-2"></i>NOIRE ESSENCE
                    </a>
                    <p class="text-muted">Timeless fragrances crafted with passion in Grasse, France since 1923.</p>
                    <div class="social-links">
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Pinterest"><i class="fab fa-pinterest-p"></i></a>
                        <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="footer-heading">Shop</h5>
                    <ul class="footer-links">
                        <li><a href="#">Women's Fragrances</a></li>
                        <li><a href="#">Men's Fragrances</a></li>
                        <li><a href="#">Unisex Scents</a></li>
                        <li><a href="#">Gift Sets</a></li>
                        <li><a href="#">Travel Sizes</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4 mb-4 mb-md-0">
                    <h5 class="footer-heading">About</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Story">Our Story</a></li>
                        <li><a href="#">Perfume Making</a></li>
                        <li><a href="#">Sustainability</a></li>
                        <li><a href="#">Press</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-4">
                    <h5 class="footer-heading">Help</h5>
                    <ul class="footer-links">
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Shipping & Returns</a></li>
                        <li><a href="#">Track Order</a></li>
                        <li><a href="#">Store Locator</a></li>
                    </ul>
                </div>
                <div class="col-lg-2">
                    <h5 class="footer-heading">Legal</h5>
                    <ul class="footer-links">
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Cookie Policy</a></li>
                        <li><a href="#">Accessibility</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p class="copyright mb-0">
                    &copy; @DateTime.Now.Year NOIRE ESSENCE. All rights reserved.
                    <span class="d-block d-sm-inline mt-2 mt-sm-0">Crafted with <i class="fas fa-heart text-danger"></i> in France</span>
                </p>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button id="back-to-top" class="btn btn-outline-secondary position-fixed bottom-0 end-0 m-3 d-none">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Back to top button
        $(document).ready(function() {
            // Clear any invalid cart data
            function clearInvalidCartData() {
                try {
                    const savedCart = localStorage.getItem('noireEssenceCart');
                    if (savedCart) {
                        const parsed = JSON.parse(savedCart);
                        if (!Array.isArray(parsed)) {
                            throw new Error('Cart data is not an array');
                        }
                    }
                } catch (e) {
                    console.warn('Clearing invalid cart data:', e);
                    localStorage.removeItem('noireEssenceCart');
                }
            }

            clearInvalidCartData();

            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) {
                    $('#back-to-top').removeClass('d-none');
                } else {
                    $('#back-to-top').addClass('d-none');
                }
            });

            $('#back-to-top').click(function() {
                $('html, body').animate({scrollTop: 0}, 'smooth');
                return false;
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Cart functionality
            let cart = [];

            function isValidCartItem(item) {
                return item &&
                       item.id &&
                       typeof item.name === 'string' &&
                       !isNaN(parseFloat(item.price)) &&
                       !isNaN(parseInt(item.quantity));
            }

            function loadCart() {
                try {
                    const savedCart = localStorage.getItem('noireEssenceCart');
                    if (savedCart) {
                        const parsed = JSON.parse(savedCart);
                        if (Array.isArray(parsed)) {
                            cart = parsed.filter(isValidCartItem);
                            updateCartUI();
                        }
                    }
                } catch (e) {
                    console.error('Error loading cart:', e);
                    localStorage.removeItem('noireEssenceCart');
                }
            }

            function saveCart() {
                try {
                    localStorage.setItem('noireEssenceCart', JSON.stringify(cart));
                } catch (e) {
                    console.error('Failed to save cart:', e);
                }
            }

            function updateCartUI() {
                const cartCount = cart.reduce((total, item) => total + (parseInt(item.quantity) || 0), 0);
                const $cartCounter = $('.cart-counter');
                const $cartItems = $('.cart-items');
                const $cartSummary = $('.cart-summary');
                let subtotal = 0;

                // Update counter
                $cartCounter.text(cartCount).toggleClass('d-none', cartCount <= 0);

                // Build items HTML
                let itemsHTML = '';
                cart.forEach(item => {
                    if (!isValidCartItem(item)) return;

                    const price = parseFloat(item.price) || 0;
                    const quantity = parseInt(item.quantity) || 0;
                    const total = price * quantity;
                    subtotal += total;

                    itemsHTML += `
                        <div class="cart-item d-flex">
                            <div class="flex-shrink-0">
                                <img src="https://via.placeholder.com/60?text=${encodeURIComponent(item.name.substring(0,1))}"
                                     alt="${item.name}" class="cart-item-img rounded">
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1">${item.name}</h6>
                                <p class="mb-1 small">$${price.toFixed(2)} × ${quantity}</p>
                                <button class="btn btn-sm btn-outline-danger remove-item" data-id="${item.id}">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </div>
                            <div class="flex-shrink-0 ms-2">
                                $${total.toFixed(2)}
                            </div>
                        </div>
                    `;
                });

                // Update UI
                if (itemsHTML) {
                    $cartItems.html(itemsHTML);
                } else {
                    $cartItems.html(`
                        <div class="text-center p-4">
                            <i class="fas fa-shopping-bag fa-2x mb-2 text-muted"></i>
                            <p class="mb-0">Your cart is empty</p>
                        </div>
                    `);
                }

                $cartSummary.find('span.fw-bold').text('$' + subtotal.toFixed(2));
            }

            // Add to cart
            $(document).on('click', '.add-to-cart', function() {
                const productId = $(this).data('product-id');
                const productName = $(this).data('product-name') || 'Unknown Product';
                const productPrice = parseFloat($(this).data('product-price')) || 0;

                if (!productId) {
                    console.error('Invalid product data');
                    return;
                }

                const existingItem = cart.find(item => item.id === productId);
                if (existingItem) {
                    existingItem.quantity = (parseInt(existingItem.quantity) || 0) + 1;
                } else {
                    cart.push({
                        id: productId,
                        name: productName,
                        price: productPrice,
                        quantity: 1
                    });
                }

                saveCart();
                updateCartUI();

                // Animate counter
                $('.cart-counter')
                    .addClass('cart-counter-update')
                    .delay(300)
                    .queue(function() {
                        $(this).removeClass('cart-counter-update').dequeue();
                    });

                // Show dropdown
                new bootstrap.Dropdown(document.getElementById('cartDropdown')).show();
            });

            // Remove item
            $(document).on('click', '.remove-item', function() {
                const productId = $(this).data('id');
                cart = cart.filter(item => item.id !== productId);
                saveCart();
                updateCartUI();
            });

            // Initialize
            loadCart();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>