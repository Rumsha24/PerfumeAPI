<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NOIRE ESSENCE</title>
    <meta name="description" content="NOIRE ESSENCE - Luxury perfumes crafted with passion since 1923">
    <meta name="keywords" content="perfume, luxury, fragrance, eau de parfum">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">

    <!-- Preload critical resources -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" as="style">
    <link rel="preload" href="https://code.jquery.com/jquery-3.7.1.min.js" as="script">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --perfume-primary: #B486AB;
            --perfume-secondary: #82667F;
            --perfume-accent: #DD9AC2;
            --perfume-light: #F8E8EA;
            --perfume-dark: #1a1a1a;
            --perfume-pale: #FDF8F9;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--perfume-light);
            color: var(--perfume-dark);
        }

        h1, h2, h3, h4, h5, .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 500;
        }

        .navbar {
            background-color: var(--perfume-dark) !important;
            border-bottom: 1px solid var(--perfume-primary);
        }

        .nav-link {
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 0.9rem;
            color: var(--perfume-light) !important;
        }

            .nav-link:hover {
                color: var(--perfume-primary) !important;
            }

        .perfume-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            overflow: hidden;
        }

            .perfume-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }

        .perfume-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--perfume-primary);
            color: var(--perfume-dark);
            padding: 5px 15px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        footer {
            background-color: var(--perfume-dark);
            color: var(--perfume-light);
            border-top: 1px solid var(--perfume-primary);
        }

        .bg-primary {
            background-color: var(--perfume-primary) !important;
            color: var(--perfume-dark);
        }

        .btn-outline-light:hover {
            color: var(--perfume-dark) !important;
            background-color: var(--perfume-primary) !important;
            border-color: var(--perfume-primary) !important;
        }

        .nav-link .fa-shopping-bag {
            transition: transform 0.3s ease;
            color: var(--perfume-light);
        }

        .nav-link:hover .fa-shopping-bag {
            transform: scale(1.1);
            color: var(--perfume-primary);
        }

        .cart-dropdown {
            width: 350px;
            padding: 0;
            border: 1px solid rgba(0,0,0,0.1);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .cart-item {
            padding: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            transition: background-color 0.2s;
        }

            .cart-item:hover {
                background-color: rgba(0,0,0,0.02);
            }

        .cart-item-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
        }

        .cart-summary {
            background-color: var(--perfume-pale);
            padding: 1rem;
            border-top: 1px solid rgba(0,0,0,0.1);
        }

        .cart-counter {
            transition: all 0.3s ease;
            background-color: var(--perfume-primary) !important;
        }

        .cart-counter-update {
            transform: scale(1.3);
        }

        /* Keyframes for animations */
        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Dropdown menu styling */
        .dropdown-menu {
            background-color: var(--perfume-pale);
            border: 1px solid var(--perfume-primary);
        }

        .dropdown-item:hover {
            background-color: var(--perfume-primary);
            color: white;
        }

        /* Footer links */
        footer a {
            color: var(--perfume-light);
            transition: color 0.3s;
        }

            footer a:hover {
                color: var(--perfume-primary);
                text-decoration: none;
            }

        /* Social media icons */
        .social-links a {
            color: var(--perfume-light);
            transition: color 0.3s;
        }

            .social-links a:hover {
                color: var(--perfume-primary);
            }

        /* Back to top button */
        #back-to-top {
            background-color: var(--perfume-primary);
            color: white;
            border: none;
        }

            #back-to-top:hover {
                background-color: var(--perfume-secondary);
            }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Luxury Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <a class="navbar-brand fs-2" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-spa me-2" aria-hidden="true"></i>NOIRE ESSENCE
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="perfumesDropdown" role="button" data-bs-toggle="dropdown">
                                Collections
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">All Products</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-collection="signature">Signature</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-collection="limited">Limited Edition</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index" asp-route-collection="private">Private Blend</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Order" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Story">Our Story</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Comment" asp-action="CommentForm">Comments</a>
                        </li>
                        <li class="nav-item ms-lg-3 mt-2 mt-lg-0">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Index">
                                <i class="fas fa-user me-1"></i> Account
                            </a>
                        </li>
                        <li class="nav-item dropdown ms-lg-2">
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index" id="cartDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-shopping-bag fa-lg" aria-hidden="true"></i>
                                <span class="sr-only">Shopping Cart</span>
                                <span class="cart-counter position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary d-none">
                                    0
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end cart-dropdown" aria-labelledby="cartDropdown">
                                <div class="px-3 py-2 border-bottom">
                                    <h6 class="mb-0">Your Cart</h6>
                                </div>
                                <div class="cart-items">
                                    <div class="text-center p-4">
                                        <i class="fas fa-shopping-bag fa-2x mb-2 text-muted"></i>
                                        <p class="mb-0">Your cart is empty</p>
                                    </div>
                                </div>
                                <div class="cart-summary">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span class="fw-bold">$0.00</span>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Cart" asp-action="Index" class="btn btn-dark">View Cart</a>
                                        <a asp-controller="Order" asp-action="Checkout" class="btn btn-outline-dark">Checkout</a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Luxury Footer -->
    <footer class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="mb-4">NOIRE ESSENCE</h5>
                    <p class="small">Timeless fragrances crafted with passion in Grasse, France since 1923.</p>
                </div>
                <div class="col-lg-4 mb-4 mb-lg-0">
                    <h5 class="mb-4">Explore</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Product" asp-action="Index" class="text-decoration-none">Our Collections</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Fragrance Finder</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none">Gift Services</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h5 class="mb-4">Connect</h5>
                    <div class="social-links">
                        <a href="#" class="text-decoration-none me-3">
                            <i class="fab fa-instagram fa-lg"></i>
                        </a>
                        <a href="#" class="text-decoration-none me-3">
                            <i class="fab fa-facebook-f fa-lg"></i>
                        </a>
                        <a href="#" class="text-decoration-none">
                            <i class="fab fa-pinterest-p fa-lg"></i>
                        </a>
                    </div>
                    <p class="small mt-3">&copy; @DateTime.Now.Year NOIRE ESSENCE. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to Top Button -->
    <button id="back-to-top" class="btn btn-outline-secondary position-fixed bottom-0 end-0 m-3 rounded-circle p-3 d-none">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    <script>
        // Back to top button
        $(document).ready(function() {
            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) {
                    $('#back-to-top').removeClass('d-none');
                } else {
                    $('#back-to-top').addClass('d-none');
                }
            });

            $('#back-to-top').click(function() {
                $('html, body').animate({scrollTop: 0}, 'smooth');
                return false;
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Cart functionality
            let cart = [];

            // Load cart from localStorage
            function loadCart() {
                const savedCart = localStorage.getItem('noireEssenceCart');
                if (savedCart) {
                    cart = JSON.parse(savedCart);
                    updateCartUI();
                }
            }

            // Save cart to localStorage
            function saveCart() {
                try {
                    localStorage.setItem('noireEssenceCart', JSON.stringify(cart));
                } catch (e) {
                    console.error('Failed to save cart:', e);
                }
            }

            // Update cart UI
            function updateCartUI() {
                const cartCount = cart.reduce((total, item) => total + item.quantity, 0);
                const $cartCounter = $('.cart-counter');
                const $cartItems = $('.cart-items');
                const $cartSummary = $('.cart-summary');
                let subtotal = 0;

                if (cartCount > 0) {
                    $cartCounter.text(cartCount).removeClass('d-none');
                } else {
                    $cartCounter.addClass('d-none');
                }

                if (cart.length > 0) {
                    let itemsHTML = '';
                    cart.forEach(item => {
                        subtotal += item.price * item.quantity;
                        itemsHTML += `
                            <div class="cart-item d-flex">
                                <div class="flex-shrink-0">
                                    <img src="https://via.placeholder.com/60?text=${encodeURIComponent(item.name.substring(0,1))}"
                                         alt="${item.name}" class="cart-item-img rounded">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">${item.name}</h6>
                                    <p class="mb-1 small">$${item.price.toFixed(2)} × ${item.quantity}</p>
                                    <button class="btn btn-sm btn-outline-danger remove-item" data-id="${item.id}">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                                <div class="flex-shrink-0 ms-2">
                                    $${(item.price * item.quantity).toFixed(2)}
                                </div>
                            </div>
                        `;
                    });
                    $cartItems.html(itemsHTML);
                    $cartSummary.find('span.fw-bold').text('$' + subtotal.toFixed(2));
                } else {
                    $cartItems.html(`
                        <div class="text-center p-4">
                            <i class="fas fa-shopping-bag fa-2x mb-2 text-muted"></i>
                            <p class="mb-0">Your cart is empty</p>
                        </div>
                    `);
                    $cartSummary.find('span.fw-bold').text('$0.00');
                }
            }

            // Add to cart
            $(document).on('click', '.add-to-cart', function() {
                const productId = $(this).data('product-id');
                const productName = $(this).data('product-name');
                const productPrice = parseFloat($(this).data('product-price'));

                const existingItem = cart.find(item => item.id === productId);

                if (existingItem) {
                    existingItem.quantity += 1;
                } else {
                    cart.push({
                        id: productId,
                        name: productName,
                        price: productPrice,
                        quantity: 1
                    });
                }

                saveCart();
                updateCartUI();

                const $counter = $('.cart-counter');
                $counter.addClass('cart-counter-update');
                setTimeout(() => {
                    $counter.removeClass('cart-counter-update');
                }, 300);

                const cartDropdown = new bootstrap.Dropdown(document.getElementById('cartDropdown'));
                cartDropdown.show();
            });

            // Remove from cart
            $(document).on('click', '.remove-item', function() {
                const productId = $(this).data('id');
                cart = cart.filter(item => item.id !== productId);
                saveCart();
                updateCartUI();
            });

            // Initialize cart
            loadCart();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>