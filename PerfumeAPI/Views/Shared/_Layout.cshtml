@using Microsoft.AspNetCore.Identity
@inject SignInManager<PerfumeAPI.Models.Entities.User> SignInManager
@inject UserManager<PerfumeAPI.Models.Entities.User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NOIRE ESSENCE</title>
    <meta name="description" content="NOIRE ESSENCE - Luxury perfumes crafted with passion since 1923">
    <meta name="keywords" content="perfume, luxury, fragrance, eau de parfum">

    <link rel="icon" href="~/favicon.ico" type="image/x-icon" asp-append-version="true" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --perfume-primary: #B486AB;
            --perfume-secondary: #82667F;
            --perfume-accent: #DD9AC2;
            --perfume-light: #F8E8EA;
            --perfume-dark: #1a1a1a;
            --perfume-pale: #FDF8F9;
            --card-shadow: 0 10px 30px rgba(180, 134, 171, 0.2);
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background-color: var(--perfume-light);
            color: var(--perfume-dark);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1, h2, h3, h4, h5, .navbar-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 500;
        }

        .navbar {
            background-color: var(--perfume-dark) !important;
            border-bottom: 1px solid var(--perfume-primary);
        }

        .nav-link {
            letter-spacing: 1px;
            text-transform: uppercase;
            font-size: 0.9rem;
            color: var(--perfume-light) !important;
        }

            .nav-link:hover {
                color: var(--perfume-primary) !important;
            }

        /* Enhanced Card Styling */
        .perfume-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            overflow: hidden;
            border-radius: 12px;
            background: white;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .perfume-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--card-shadow);
            }

        .card-img-container {
            height: 300px;
            overflow: hidden;
            position: relative;
        }

        .card-img-top {
            height: 100%;
            width: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .perfume-card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            color: var(--perfume-dark);
            margin-bottom: 0.75rem;
        }

        .card-text {
            color: var(--perfume-secondary);
            margin-bottom: 1rem;
            flex-grow: 1;
        }

        .card-price {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--perfume-primary);
            margin-bottom: 1rem;
        }

        .perfume-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--perfume-primary);
            color: var(--perfume-dark);
            padding: 5px 15px;
            font-size: 0.8rem;
            font-weight: 600;
            border-radius: 20px;
            z-index: 1;
        }

        /* Footer Enhancements */
        footer {
            background-color: var(--perfume-dark);
            color: var(--perfume-light);
            border-top: 1px solid var(--perfume-primary);
            margin-top: auto;
            padding: 4rem 0 2rem;
        }

        .footer-logo {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: var(--perfume-light);
            margin-bottom: 1.5rem;
            display: inline-block;
        }

        .footer-heading {
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            color: var(--perfume-light);
            position: relative;
            padding-bottom: 0.5rem;
        }

            .footer-heading:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 50px;
                height: 2px;
                background: var(--perfume-primary);
            }

        .footer-links {
            list-style: none;
            padding: 0;
        }

            .footer-links li {
                margin-bottom: 0.75rem;
            }

            .footer-links a {
                color: var(--perfume-light);
                text-decoration: none;
                transition: color 0.3s ease;
                font-size: 0.9rem;
            }

                .footer-links a:hover {
                    color: var(--perfume-primary);
                    padding-left: 5px;
                }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

            .social-links a {
                color: var(--perfume-light);
                font-size: 1.2rem;
                transition: all 0.3s ease;
            }

                .social-links a:hover {
                    color: var(--perfume-primary);
                    transform: translateY(-3px);
                }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 2rem;
            margin-top: 3rem;
            text-align: center;
        }

        .copyright {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.7);
        }

        /* Other Styles */
        .bg-primary {
            background-color: var(--perfume-primary) !important;
            color: var(--perfume-dark);
        }

        .btn-outline-light:hover {
            color: var(--perfume-dark) !important;
            background-color: var(--perfume-primary) !important;
            border-color: var(--perfume-primary) !important;
        }

        .nav-link .fa-shopping-bag {
            transition: transform 0.3s ease;
            color: var(--perfume-light);
        }

        .nav-link:hover .fa-shopping-bag {
            transform: scale(1.1);
            color: var(--perfume-primary);
        }

        .cart-dropdown {
            width: 350px;
            padding: 0;
            border: 1px solid rgba(0,0,0,0.1);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .cart-item {
            padding: 1rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            transition: background-color 0.2s;
        }

            .cart-item:hover {
                background-color: rgba(0,0,0,0.02);
            }

        .cart-item-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
        }

        .cart-summary {
            background-color: var(--perfume-pale);
            padding: 1rem;
            border-top: 1px solid rgba(0,0,0,0.1);
        }

        .cart-counter {
            transition: all 0.3s ease;
            background-color: var(--perfume-primary) !important;
        }

        .cart-counter-update {
            transform: scale(1.3);
        }

        .dropdown-menu {
            background-color: var(--perfume-pale);
            border: 1px solid var(--perfume-primary);
        }

        .dropdown-item:hover {
            background-color: var(--perfume-primary);
            color: white;
        }

        #back-to-top {
            background-color: var(--perfume-primary);
            color: white;
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            #back-to-top:hover {
                background-color: var(--perfume-secondary);
                transform: translateY(-3px);
            }

        /* Grid Layout for Products */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
            padding: 2rem 0;
        }

        /* Section Styling */
        .section-title {
            position: relative;
            margin-bottom: 3rem;
            padding-bottom: 1rem;
        }

            .section-title:after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 80px;
                height: 3px;
                background: var(--perfume-primary);
            }

        /* User dropdown styles */
        .user-greeting {
            color: var(--perfume-light);
            padding-right: 1rem;
        }

        .user-dropdown {
            min-width: 200px;
        }

            .user-dropdown .dropdown-item {
                padding: 0.5rem 1rem;
            }

            .user-dropdown .dropdown-divider {
                margin: 0.25rem 0;
            }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
