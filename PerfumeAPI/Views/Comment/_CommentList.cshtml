@using System.Security.Claims
@using Microsoft.AspNetCore.Authentication
@model IEnumerable<PerfumeAPI.Models.Entities.Comment>

<div class="comments-section mt-5">
    <h4>Customer Reviews</h4>

    @if (!Model.Any())
    {
        <p>No reviews yet. Be the first to review!</p>
    }
    else
    {
        foreach (var comment in Model.OrderByDescending(c => c.CreatedAt))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@comment.User.UserName</h5>
                        <div class="rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="@(i <= comment.Rating ? "text-warning" : "text-muted")">★</span>
                            }
                        </div>
                    </div>
                    <p class="text-muted small">@comment.CreatedAt.ToString("MMMM dd, yyyy")</p>
                    <p class="card-text">@comment.Text</p>

                    @if (comment.Images.Any())
                    {
                        <div class="comment-images mt-3">
                            @foreach (var image in comment.Images)
                            {
                                <a href="@image.ImageUrl" data-lightbox="comment-@comment.Id">
                                    <img src="@image.ImageUrl" alt="Comment image" class="img-thumbnail mr-2" style="max-height: 100px;">
                                </a>
                            }
                        </div>
                    }

                    @if (User.Identity.IsAuthenticated && User.FindFirst(ClaimTypes.NameIdentifier)?.Value == comment.UserId)
                    {
                        <form asp-controller="Comment" asp-action="Delete" method="post" class="mt-2">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    }
                </div>
            </div>
        }
    }
</div>