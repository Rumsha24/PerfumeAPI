@model IEnumerable<PerfumeAPI.Models.Entities.Product>
@{
    ViewData["Title"] = "Our Fragrance Collection";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Our Collections</h1>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown"
                    data-bs-toggle="dropdown" aria-expanded="false">
                Sort By
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                <li><a class="dropdown-item" href="?sort=price_asc">Price: Low to High</a></li>
                <li><a class="dropdown-item" href="?sort=price_desc">Price: High to Low</a></li>
                <li><a class="dropdown-item" href="?sort=newest">Newest First</a></li>
                <li><a class="dropdown-item" href="?sort=featured">Featured Items</a></li>
            </ul>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 perfume-card">
                    @if (product.IsFeatured)
                    {
                        <span class="position-absolute top-0 end-0 badge bg-danger mt-2 me-2">
                            Featured
                        </span>
                    }
                    <img src="@(product.ImageUrl ?? "/images/default-perfume.jpg")"
                         class="card-img-top p-3"
                         alt="@product.Name"
                         onerror="this.onerror=null;this.src='/images/default-perfume.jpg';">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.FragranceType | @product.FragranceFamily | @product.Size</p>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary">@product.Price.ToString("C")</span>
                            <form method="post" asp-controller="Cart" asp-action="AddToCart" class="d-flex">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="number" name="quantity" value="1" min="1"
                                       class="form-control form-control-sm me-2" style="width: 60px;" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-cart-plus"></i> Add
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a asp-action="Details" asp-route-id="@product.Id"
                           class="btn btn-sm btn-outline-secondary w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Toastr notifications configuration
            toastr.options = {
                "closeButton": true,
                "positionClass": "toast-bottom-right",
                "preventDuplicates": true
            };

            // Handle form submission
            $('form').submit(function(e) {
                e.preventDefault();
                const form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    success: function() {
                        toastr.success('Added to cart!');
                        updateCartCount();
                    },
                    error: function() {
                        toastr.error('Please login first');
                        window.location.href = '/Account/Login';
                    }
                });
            });

            function updateCartCount() {
                $.get('/Cart/GetCartCount', function(data) {
                    $('.cart-count').text(data);
                });
            }
        });
    </script>

    <style>
        .perfume-card {
            transition: transform 0.3s;
            border: 1px solid #FFCCD5;
        }

            .perfume-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(201, 24, 74, 0.1);
            }

        .card-img-top {
            height: 250px;
            object-fit: contain;
            background-color: #FFF0F3;
        }

        .card-title {
            color: #590D22;
            font-weight: bold;
        }

        .text-primary {
            color: #C9184A !important;
        }

        .btn-outline-primary {
            color: #C9184A;
            border-color: #C9184A;
        }

            .btn-outline-primary:hover {
                background-color: #C9184A;
                color: white;
            }

        .btn-outline-secondary {
            color: #800F2F;
            border-color: #800F2F;
        }

            .btn-outline-secondary:hover {
                background-color: #800F2F;
                color: white;
            }
    </style>
}