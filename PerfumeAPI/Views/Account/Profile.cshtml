@model PerfumeAPI.Models.Entities.User
@{
    ViewData["Title"] = "Profile";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Your Profile</h2>

                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                            {
                                <img src="@Model.ProfileImageUrl" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-4x text-secondary"></i>
                                </div>
                            }
                            <a asp-action="ChangePassword" class="btn btn-outline-primary btn-sm">Change Password</a>
                        </div>

                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.FullName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Member Since:</dt>
                                <dd class="col-sm-8">@Model.MemberSince.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Shipping Address:</dt>
                                <dd class="col-sm-8">@Model.ShippingAddress</dd>
                            </dl>

                            <div class="mt-4">
                                <a asp-action="EditProfile" class="btn btn-primary me-2">Edit Profile</a>
                                <a asp-controller="Order" asp-action="History" class="btn btn-outline-secondary">Order History</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>