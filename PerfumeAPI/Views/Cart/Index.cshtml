@model PerfumeAPI.Models.DTOs.CartDto
@{
    ViewData["Title"] = "Your Shopping Cart";
}

<div class="container my-5">
    <h1 class="mb-4">Your Cart</h1>

    @if (Model?.Items?.Any() ?? false)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <table class="table cart-table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr data-item-id="@item.ProductId">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@Url.Content($"~{item.ProductImage ?? "/images/products/default-product.jpg"}")"
                                                     class="img-thumbnail me-3"
                                                     style="width: 80px; height: 80px; object-fit: cover;"
                                                     alt="@item.ProductName">
                                                <div>
                                                    <h6 class="mb-1">@item.ProductName</h6>
                                                    <small class="text-muted">@item.FragranceType</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>
                                            <form asp-action="UpdateQuantity" method="post" class="quantity-form">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <div class="input-group" style="width: 120px;">
                                                    <button class="btn btn-outline-secondary quantity-btn decrease" type="button">
                                                        -
                                                    </button>
                                                    <input type="number"
                                                           name="quantity"
                                                           class="form-control text-center quantity-input"
                                                           value="@item.Quantity"
                                                           min="1"
                                                           max="100">
                                                    <button class="btn btn-outline-secondary quantity-btn increase" type="button">
                                                        +
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="item-total">@((item.Price * item.Quantity).ToString("C"))</td>
                                        <td>
                                            <form asp-action="RemoveItem" method="post">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.Subtotal.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>@Model.ShippingTotal.ToString("C")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total:</span>
                            <span>@Model.GrandTotal.ToString("C")</span>
                        </div>
                        <hr>
                        <a asp-controller="Order" asp-action="Checkout"
                           class="btn btn-primary w-100">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Perfume" asp-action="Index">Browse our collections</a>.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle quantity changes
            $('.quantity-btn').click(function() {
                const $form = $(this).closest('.quantity-form');
                const $input = $form.find('.quantity-input');
                let quantity = parseInt($input.val());

                if ($(this).hasClass('increase')) {
                    quantity++;
                } else if ($(this).hasClass('decrease') && quantity > 1) {
                    quantity--;
                }

                $input.val(quantity);
                $form.submit();
            });

            // Submit form when quantity input changes
            $('.quantity-input').change(function() {
                $(this).closest('form').submit();
            });
        });
    </script>
}